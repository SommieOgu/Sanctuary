/* FindShelterPage.module.css */

.container {
    background-color: #181818;
    color: white;
    padding: 20px;
    min-height: 100vh;
  }
  
  .title {
    font-size: 2.5rem;
    color: #00c2ff;
    text-align: center;
  }
  
  .description {
    font-size: 1.2rem;
    color: #ccc;
    text-align: center;
    margin-top: 10px;
  }
  
  .chatContainer {
    margin-top: 50px;
    background-color: #1f1f1f;
    padding: 20px;
    border-radius: 8px;
  }
  
  .chatBubble {
    background-color: #0061ff;
    color: white;
    padding: 15px;
    border-radius: 12px;
    margin-bottom: 20px;
    text-align: center;
  }
  
  .chatInput {
    width: 80%;
    height: 100px;
    margin-top: 10px;
    padding: 10px;
    border-radius: 8px;
    border: none;
    font-size: 1rem;
    background-color: #333;
    color: white;
    outline: none;
  }
  
  .sendButton {
    margin-top: 10px;
    padding: 10px 20px;
    background-color: #0061ff;
    color: white;
    border: none;
    border-radius: 5px;
    cursor: pointer;
  }
  
  .sendButton:hover {
    background-color: #004bb5;
  }
  
  .chatResponse {
    margin-top: 20px;
    padding: 15px;
    background-color: #2b2b2b;
    border-radius: 8px;
    color: white;
    font-size: 1rem;
  }
  
