"use client";

export default function Navbar({ onHomeClick, onFindServicesClick, onGetHelpNowClick }) {
  return (
    <nav style={{
      display: "flex",
      justifyContent: "space-around",
      alignItems: "center",
      padding: "1rem",
      backgroundColor: "#000",
      color: "#fff",
      position: "sticky",
      top: 0,
      zIndex: 1000,
    }}>
      <button onClick={onHomeClick} style={buttonStyle}>
        Home
      </button>
      <button onClick={onFindServicesClick} style={buttonStyle}>
        Find Services
      </button>
      <button onClick={onGetHelpNowClick} style={buttonStyle}>
        Get Help Now
      </button>
    </nav>
  );
}

const buttonStyle = {
  background: "none",
  border: "none",
  color: "white",
  fontSize: "1rem",
  cursor: "pointer"
};
